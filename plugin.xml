<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    id="cordova-plugin-maerfid"
    version="1.0.0">
    <name>MaeRfid</name>
    <description>Rfid Plugin</description>
    <license>MIT</license>
    <author>Maestrale Information Technology - Daniele Pellerucci</author>
    <keywords></keywords>
    <repo>https://github.com/driftyco/cordova-plugin-template.git</repo>
    <issue>https://github.com/driftyco/cordova-plugin-template/issues</issue>

    <!-- android -->
    <platform name="android">
      <js-module src="www/maerfid.js" name="maerfid">

        <!-- This is the window variable name you want, like window.MaeRfid -->
        <clobbers target="MaeRfid" />
      </js-module>
      <config-file target="res/xml/config.xml" parent="/*">
        <feature name="MaeRfid">
          <param name="android-package" value="com.maestrale.maerfid.MaeRfid" />
        </feature>
      </config-file>

      <source-file src="src/android/MaeRfid.java" target-dir="src/com/maestrale/maerfid" />
    </platform>

    <!-- browser -->
    <platform name="browser">
        <config-file target="config.xml" parent="/*">
            <feature name="MaeRfid">
                <param name="browser-package" value="MaeRfid" />
            </feature>
        </config-file>

        <js-module src="src/browser/MaeRfidProxy.js" name="MaeRfidProxy">
            <runs />
        </js-module>
    </platform>
</plugin>
